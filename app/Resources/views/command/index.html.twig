{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container" class="container">
            <div id="welcome">
                <h1>Command - {{ team.name | capitalize }}</h1>
            </div>

            <table class="table table-striped table-hover table-responsive">
                <thead style="background: aqua">
                <th>#</th>
                <th>Player Name</th>
                <th>Age</th>
                </thead>
                <tbody>


                {% for player in team.players %}
                    <tr>
                        <td>{{ player.id }}</td>
                        <td><a href="/player/{{ player.id }}">{{ player.name }}</a></td>
                        <td>{{ player.age }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>

            <table class="table table-striped table-hover table-responsive">
                <thead style="background: aqua">
                <th>#</th>
                <th>Player Name</th>
                <th>Age</th>
                </thead>
                <tbody>


                {% for trainer in team.trainers %}
                    <tr>
                        <td>{{ trainer.id }}</td>
                        <td><a href="/player/{{ trainer.id }}">{{ trainer.name }}</a></td>
                        <td>{{ trainer.age }}</td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
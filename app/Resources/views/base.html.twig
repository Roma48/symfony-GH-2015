<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="header">
        <div class="container">
            <div class="col-lg-2"></div>
            <div class="col-lg-10">
                <ul class="nav nav-pills pull-right">
                    <li role="presentation" class="active"><a href="/">Teams</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div id="content">
        {% block body %}{% endblock %}
    </div>
    <div id="footer">
        <div class="container"></div>
    </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>

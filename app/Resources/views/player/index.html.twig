{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container" class="container">
            <div id="welcome">
                <h1>Player - {{ player.name }}</h1>
                <img src="{{ player.photo }}" alt="">
            </div>

            <table class="table table-striped table-hover table-responsive">
                <tbody>
                    <tr>
                        <td>Age</td>
                        <td>{{ player.age }}</td>
                    </tr>
                    <tr>
                        <td>Country</td>
                        <td>{{ player.country }}</td>
                    </tr>
                    <tr>
                        <td>Goals</td>
                        <td>{{ player.goals }}</td>
                    </tr>
                </tbody>
            </table>

        </div>
    </div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <div id="container" class="container">
            <div id="welcome">
                <h1>Team - {{ team.name | capitalize }}</h1>
            </div>
            <div class="col-lg-6">
                <table class="table table-striped table-hover table-responsive">
                    <thead style="background: aqua">
                    <th>#</th>
                    <th>Player Name</th>
                    <th>Age</th>
                    </thead>
                    <tbody>


                    {% for player in team.players %}
                        <tr>
                            <td>{{ player.id }}</td>
                            <td><a href="/player/{{ player.id }}">{{ player.name }}</a></td>
                            <td>{{ player.age }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

            <div class="col-lg-6">
                <table class="table table-striped table-hover table-responsive col-lg-6">
                    <thead style="background: aqua">
                    <th>#</th>
                    <th>Trainer Name</th>
                    <th>Age</th>
                    </thead>
                    <tbody>


                    {% for trainer in team.trainers %}
                        <tr>
                            <td>{{ trainer.id }}</td>
                            <td><a href="/trainer/{{ trainer.id }}">{{ trainer.name }}</a></td>
                            <td>{{ trainer.age }}</td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>

        </div>
    </div>
{% endblock %}